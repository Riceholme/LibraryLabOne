@model IEnumerable<Book>
@{
    ViewData["Title"] = "Loan Book";
}
<h1>Choose book to loan</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">In Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                @if (item.inStock == true)
                {
                    <td>Available</td>
                    <td>
                    <form asp-action="AddBookToLoan" asp-route-id="@item.Id">
                        <div class=" btn-group btn-group-sm">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Confirm Book')">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </form>
                </td>
                }
                @if(item.inStock == false)
                {
                    <td>Not Available</td>
                }
            </tr>
        }
    </tbody>
</table>