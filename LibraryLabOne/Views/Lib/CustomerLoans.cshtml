@model CustomerLoansViewModel

<h3>@Model.Cust.FirstName</h3>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Loan Date</th>
            <th scope="col">Return Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Loans)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Book.Title</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>
                    <form asp-action="ReturnLoanedBook" asp-route-id="@item.Id">
                        <div class=" btn-group btn-group-sm">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Confirm book return')">
                                <i class="fa-solid fa-turn-down-left"></i>
                            </button>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
